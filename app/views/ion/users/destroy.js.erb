$('.ion-win').unblock();
ion.flash.rails( <%= raw flash.to_json %> );
<% if flash.notice %>
  var item = ko.dataFor( $('#ion-users-list li[data-id=<%= @user.id %>]').get(0) );
  item._master.items.remove( item );
  ion.Win.closeAll();
  $('.ion-details-placeholder').show();
  $('.ion-content-frame').hide();
<% else %>
  $('.ion-win-title').html($('.ion-flash-container').html());
<% end %>