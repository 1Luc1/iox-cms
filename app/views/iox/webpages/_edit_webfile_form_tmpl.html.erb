<script id="edit-webfile-form-template" type="text/html">

  <form data-bind="submit: save" class="content-padding iox-form">

    <div class="field-box">
      <label><%= t('name') %></label>
      <input type="text" name="webfile[name]" data-bind="value: item.name" />
    </div>

    <div class="field-box">
      <label><%= t('webfile.copyright') %></label>
      <input type="text" name="webfile[copyright]" data-bind="value: item.copyright" />
    </div>

    <div class="field-box">
      <label><%= t('webfile.description') %></label>
      <textarea name="webfile[description]" data-bind="value: item.description"></textarea>
    </div>

    <input type="submit" class="hide" value="submit" />

    <div class="iox-win-footer">
      <button type="submit" class="btn btn-primary"><%= t('save') %></button>
      <button class="btn" data-close-win="true"><%= t('close') %></button>
    </div>

  </form>

</script>